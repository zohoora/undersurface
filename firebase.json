{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": ["node_modules", ".git", "src"]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/chat",
        "function": "chat"
      },
      {
        "source": "/api/admin",
        "function": "adminApi"
      },
      {
        "source": "/api/account",
        "function": "accountApi"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
